-- vim: syntax=haskell

Config { font = "xft:Terminus:size=10"
       , bgColor = "black"
       , fgColor = "grey"
       , position = Top
       , lowerOnStart = True
       , border = NoBorder
       , borderColor = "black"
       , commands = [ Run Network "eth0" ["-L","0","-H","32","--normal","green","--high","red"] 10
                    , Run MultiCpu ["-t", "<total0>% <total1>%", "-L","3","-H","50","--normal","green","--high","red"] 10
                    , Run Memory ["-t","Mem: <used>MB <usedratio>%"] 10
                    , Run Date "%a %b %_d %Y %H:%M:%S" "date" 10
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = " %multicpu% | %memory% | %eth0% } %StdinReader% { <fc=#ee9a00>%date%</fc>"
       }